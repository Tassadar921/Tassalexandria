{
    "name": "tassalexandria",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "license": "MIT",
    "scripts": {
        "start": "node bin/server.js",
        "install:prod": "rm -rf node_modules && npm ci --omit=\"dev\"",
        "build": "[ -d build/public ] && cp -r build/public tmp_build_public && [ -d build/static ] && cp -r build/static tmp_build_static && node ace build && cp -r public build && cp -r static build && cp .env build/.env && npm run install:prod && pm2 stop tassalexandria || true && pm2 delete tassalexandria || true && pm2 start bin/server.js --name tassalexandria --env PORT=3001 && cd ../ && rsync -av --progress tmp_build_public/ build/public/ && rsync -av --progress tmp_build_static/ build/static/ && rm -rf tmp_build_public tmp_build_static",
        "dev": "node ace serve --hmr",
        "test": "node ace test",
        "format": "prettier --write ."
    },
    "imports": {
        "#controllers/*": "./app/controllers/*.js",
        "#exceptions/*": "./app/exceptions/*.js",
        "#models/*": "./app/models/*.js",
        "#repositories/*": "./app/repositories/*.js",
        "#mails/*": "./app/mails/*.js",
        "#services/*": "./app/services/*.js",
        "#types/*": "./app/types/*.js",
        "#listeners/*": "./app/listeners/*.js",
        "#events/*": "./app/events/*.js",
        "#middleware/*": "./app/middleware/*.js",
        "#validators/*": "./app/validators/*.js",
        "#providers/*": "./providers/*.js",
        "#policies/*": "./app/policies/*.js",
        "#abilities/*": "./app/abilities/*.js",
        "#database/*": "./database/*.js",
        "#start/*": "./start/*.js",
        "#tests/*": "./tests/*.js",
        "#config/*": "./config/*.js"
    },
    "devDependencies": {
        "@adonisjs/assembler": "^7.8.2",
        "@adonisjs/eslint-config": "^2.0.0-beta.6",
        "@adonisjs/prettier-config": "^1.4.0",
        "@adonisjs/tsconfig": "^1.4.0",
        "@japa/api-client": "^2.0.3",
        "@japa/assert": "^3.0.0",
        "@japa/plugin-adonisjs": "^3.0.1",
        "@japa/runner": "^3.1.4",
        "@swc/core": "1.7.26",
        "@types/async-retry": "^1.4.9",
        "@types/cli-progress": "^3.11.6",
        "@types/luxon": "^3.4.2",
        "@types/node": "^22.7.5",
        "eslint": "^9.14.0",
        "hot-hook": "^0.3.1",
        "pino-pretty": "^11.2.2",
        "prettier": "^3.3.3",
        "ts-node-maintained": "^10.9.4",
        "typescript": "~5.6"
    },
    "dependencies": {
        "@adonisjs/auth": "^9.2.3",
        "@adonisjs/core": "^6.14.1",
        "@adonisjs/cors": "^2.2.1",
        "@adonisjs/lucid": "^21.3.0",
        "@adonisjs/static": "^1.1.1",
        "@vinejs/vine": "^2.1.0",
        "async-retry": "^1.3.3",
        "axios": "^1.7.7",
        "cli-progress": "^3.12.0",
        "luxon": "^3.5.0",
        "octokit": "^4.0.2",
        "pg": "^8.13.1",
        "reflect-metadata": "^0.2.2",
        "scryfall-sdk": "^5.0.2",
        "stripe": "^17.3.0"
    },
    "hotHook": {
        "boundaries": [
            "./app/controllers/**/*.ts",
            "./app/middleware/*.ts"
        ]
    },
    "overrides": {
        "strtok3": "8.0.1"
    },
    "resolutions": {
        "strtok3": "8.0.1"
    },
    "pnpm": {
        "overrides": {
            "strtok3": "8.0.1"
        }
    }
}
